<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/header"
        android:layout_width="413dp"
        android:layout_height="122dp"
        android:layout_marginBottom="784dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="350dp"
            android:layout_height="218dp"
            app:srcCompat="@mipmap/profile"
            android:layout_marginTop="122dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/goal"
            android:layout_width="288dp"
            android:layout_height="126dp"
            app:srcCompat="@mipmap/goal"
            android:layout_marginTop="26dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/edit"
            android:layout_width="350dp"
            android:layout_height="57dp"
            app:srcCompat="@mipmap/edit"
            android:layout_marginTop="21dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/setting"
            android:layout_width="350dp"
            android:layout_height="57dp"
            app:srcCompat="@mipmap/setting"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/help"
            android:layout_width="350dp"
            android:layout_height="57dp"
            app:srcCompat="@mipmap/help"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/logout"
            android:layout_width="350dp"
            android:layout_height="57dp"
            app:srcCompat="@mipmap/logout"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
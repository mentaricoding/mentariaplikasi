<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/header"
        android:layout_width="413dp"
        android:layout_height="122dp"
        android:layout_marginBottom="784dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/header" />


    <TextView
        android:id="@+id/judul_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat Peminjaman Buku"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="44dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/primary_color"
        />

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="148dp"
        android:background="@drawable/card"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/judul_page"
        android:layout_marginTop="16dp"
        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="85dp"
            android:layout_height="112dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@mipmap/buku1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:text="The Things You Can See Only When You Slow Down"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="14dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/primary_color"
                />

            <TextView
                android:id="@+id/status"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:text="Status:Sedang Dipinjam"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="14dp"
                android:textSize="10dp"
                android:textColor="@color/secondary_color"
                />

            <TextView
                android:id="@+id/ket_tgl"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:text="Harus Dikembalikan pada:"
                android:textAlignment="viewEnd"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="14dp"
                android:textSize="10dp"
                android:textColor="@color/secondary_color"
                />

            <TextView
                android:id="@+id/tgl"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:text="18 Januari 2023"
                android:textAlignment="viewEnd"
                android:layout_marginLeft="14dp"
                android:textSize="10dp"
                android:textColor="@color/secondary_color"
                />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
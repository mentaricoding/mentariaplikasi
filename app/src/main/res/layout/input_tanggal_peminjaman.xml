<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/header"
        android:layout_width="413dp"
        android:layout_height="122dp"
        android:layout_marginBottom="784dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/header" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">


        <ImageView
            android:id="@+id/gambar_buku"
            android:layout_width="233dp"
            android:layout_height="292dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/buku1" />

        <TextView
            android:id="@+id/judul_buku"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="The Things You Can See Only When You Slow Down"
            android:textColor="@color/primary_color"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="date"
            android:background="@drawable/edit_text_border"
            android:layout_marginTop="96dp"
            android:hint="  Tanggal Peminjaman"/>


        <Button
            android:id="@+id/button"
            android:onClick="bbb"
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:layout_marginTop="112dp"
            android:background="@drawable/button_masuk"
            android:text="Lanjutkan Peminjaman"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tahunterbit_content"
            app:layout_constraintVertical_bias="0.569"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
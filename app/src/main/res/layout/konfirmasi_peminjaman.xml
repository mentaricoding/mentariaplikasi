<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/header"
        android:layout_width="413dp"
        android:layout_height="122dp"
        android:layout_marginBottom="784dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/header" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">


        <ImageView
            android:id="@+id/gambar_buku"
            android:layout_width="233dp"
            android:layout_height="292dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/buku1" />

        <TextView
            android:id="@+id/judul_buku"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="The Things You Can See Only When You Slow Down"
            android:textColor="@color/primary_color"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/konfirmasi"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:text="Kamu meminjam buku The Things You Can See Only When You Slow Down pada tanggal 13 Juni 2022, kamu harus mengembalikan buku pada tanggal 18 Juni 2022."
            android:textSize="16dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            />

        <TextView
            android:id="@+id/sinopsis_content"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/secondary_color"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:text="Kamu tinggal memperlihatkan ini kepada Pustakawan yang betugas, terima kasih." />


        <Button
            android:id="@+id/button"
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:onClick="ccc"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/button_masuk"
            android:text="Konfirmasi Peminjaman"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tahunterbit_content"
            app:layout_constraintVertical_bias="0.569"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>